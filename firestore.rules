rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Securizare la nivel de colecție pentru 'checkins'
    match /checkins/{document=**} {
      allow read: if request.auth != null;  // Doar utilizatori autentificați pot citi
      allow write: if request.auth != null  // Doar utilizatori autentificați pot scrie
                   && request.resource.data.keys().hasAll(['date'])  // Verificăm că există câmpul obligatoriu
                   && request.resource.data.date is string;  // Verificăm tipul de date
    }
  }
}
